# .clang-format - BGCE project style
# Tabs for indentation (8 columns). Function braces on same line.

BasedOnStyle: LLVM
IndentWidth: 8
TabWidth: 8
UseTab: ForIndentation
ContinuationIndentWidth: 8

# Keep opening braces on same line (Attach style)
BreakBeforeBraces: Attach

# Other common choices to keep output consistent
AllowShortFunctionsOnASingleLine: Inline
AllowShortIfStatementsOnASingleLine: false
AllowShortLoopsOnASingleLine: false

ColumnLimit: 0        # no hard limit
DerivePointerAlignment: false
PointerAlignment: Left

# Keep C-style cast formatting predictable
AllowShortBlocksOnASingleLine: false

# Keep macro formatting stable
MacroBlockBegin: ''
MacroBlockEnd: ''

# Keep one true brace style for various constructs
BraceWrapping:
  AfterClass: false
  AfterControlStatement: false
  AfterEnum: false
  AfterFunction: false
  AfterNamespace: false
  AfterObjCDeclaration: false
  AfterStruct: false
  AfterUnion: false
  BeforeCatch: false
  BeforeElse: false
  IndentBraces: false

